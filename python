...  /* tu búsqueda y filtros */
| bin _time span=1h
| stats count AS Correos
        count(eval(user="acordodigital@santander.com.br"))            AS acordodigital
        count(eval(user="notificaciones@notificaciones.santander.com.mx")) AS notificacionesSanMX
        count(eval(user="faturapromeial@santander.com.br"))            AS faturapromeial
        count(eval(user="mensajeria@santander.cl"))                    AS mensajeria
        count(eval(user="notificaciones@santander.com.mx"))            AS notificacionesMX
        count(eval(user!="acordodigital@santander.com.br"
                 AND user!="notificaciones@notificaciones.santander.com.mx"
                 AND user!="faturapromeial@santander.com.br"
                 AND user!="mensajeria@santander.cl"
                 AND user!="notificaciones@santander.com.mx"))        AS Otros
        BY _time
| sort _time
| addcoltotals
| eval _time = if(isnull(_time), "Total", _time)

/* ---- formateo: número (porcentaje) por columna ---- */
| eval acordodigital     = replace(tostring(acordodigital,"commas"),",",".") + " (" + tostring(round(100*acordodigital/Correos,2)) + "%)"
| eval notificacionesSanMX = replace(tostring(notificacionesSanMX,"commas"),",",".") + " (" + tostring(round(100*notificacionesSanMX/Correos,2)) + "%)"
| eval faturapromeial    = replace(tostring(faturapromeial,"commas"),",",".") + " (" + tostring(round(100*faturapromeial/Correos,2)) + "%)"
| eval mensajeria        = replace(tostring(mensajeria,"commas"),",",".") + " (" + tostring(round(100*mensajeria/Correos,2)) + "%)"
| eval notificacionesMX  = replace(tostring(notificacionesMX,"commas"),",",".") + " (" + tostring(round(100*notificacionesMX/Correos,2)) + "%)"
| eval Otros             = replace(tostring(Otros,"commas"),",",".") + " (" + tostring(round(100*Otros/Correos,2)) + "%)"

/* deja Correos numérico para los cálculos y lo formateas al final */
| eval Correos = replace(tostring(Correos,"commas"),",",".")
| rename _time AS Tiempo
