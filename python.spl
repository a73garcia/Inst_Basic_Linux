index="siem-eu-mta" suser="*" duser="*" start="*"
| rex field=_raw "start=(?<start_raw>[A-Za-z]{3}\s[A-Za-z]{3}\s\d{1,2}\s\d{2}:\d{2}:\d{2}\s\d{4})"
| eval start_ts = strptime(start_raw,"%a %b %e %H:%M:%S %Y")
| eval Dia = strftime(start_ts,"%Y-%m-%d"), Hora = strftime(start_ts,"%H:%M:%S")
| rename suser AS Sender, duser AS Recipient
| table mid Dia Hora Sender Recipient


